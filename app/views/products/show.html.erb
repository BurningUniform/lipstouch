<ul class="collection with-header">

<li class="collection-header"><h4>전체 브랜드</h4></li>
<% @brands.each do |brand| %>
   <li class="collection-item"><%= link_to brand.title, brand_path(brand) %></li>
<% end %>

 <li class="collection-header"><h4><%=@brand.title%> 의 제품들</h4></li>
        <% @brand.products.each do |product| %>
        <li class="collection-item"><%= link_to product.title, product_path(product) %></li>
        <% end %>
        
<li class="collection-header"><h4><%=@product.title%> 의 호수</h4></li>
<% @product.names.each do |name| %>
    <li class="collection-header"><%= link_to name.title, name_path(name) %></li>
<% end %>
</ul>